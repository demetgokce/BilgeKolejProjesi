@model Bilge.Domain.Ders

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Ders Ekle";
}

<h2>Ders Ekle</h2>

<form method="post" asp-controller="Ders" asp-action="İndex">
    @Html.ValidationSummary(true)


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ders Bilgisi</h4>
        <hr />
        @Html.ValidationSummary(true)
       
            <div class="form-group">
                @Html.LabelFor(model => model.DersAd, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DersAd)
                    @Html.ValidationMessageFor(model => model.DersAd)
                </div>
            </div>
       
            <div class="form-group">
                @Html.LabelFor(model => model.Kod, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Kod)
                    @Html.ValidationMessageFor(model => model.Kod)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Sinif</label>
                <div class="col-md-10">
                    <select id="SinifId">
                    </select>
                    @Html.ValidationMessageFor(model => model.SinifId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SinifId, "DersId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="BolumId" name="BolumId"></select>
                    @Html.ValidationMessageFor(model => model.SinifId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Ders Listesine Dön", "DersListesi")
        </div>
</form>