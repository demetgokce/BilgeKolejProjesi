@model IEnumerable<Ders>

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Ders Listesi";
}

<h2>Ders Listesi</h2>

<p>
    @Html.ActionLink("Ders Ekle", "DersEkle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DersAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinif.SinifAdi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DersAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinif.SinifAdi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "DersDuzenle", new { id = item.Id }) |
                @Html.ActionLink("Detay", "DersDetay", new { id = item.Id }) |
                @Html.ActionLink("Sil", "DersSil", new { id = item.Id })
            </td>
        </tr>
    }

</table>